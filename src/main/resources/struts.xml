<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "https://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	
    <constant name="struts.devMode" value="true" />
	<!-- <constant name="struts.objectFactory" value="struts"/> -->
    <constant name="struts.objectFactory" value="spring"/>

    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>


    
    <!--<constant name="struts.allowlist.classes" value="com.example.model.User"/>-->

   
    <package name="default" namespace="/api" extends="struts-default,json-default">



        <interceptors>

             <interceptor name="timingInterceptor" class="org.fileservice.interceptor.TimingInterceptor"/>
             <interceptor name="conditionalJson" class="org.fileservice.interceptor.ConditionalJsonInterceptor"/>

             
             <interceptor-stack name="conditionalJsonStack">
                <interceptor-ref name="params"/>
                <interceptor-ref name="timingInterceptor"/>
                <interceptor-ref name="conditionalJson"/>
            </interceptor-stack>

            <interceptor-stack name="fileUploadJsonStack">
            <!-- handles multipart -->
                <interceptor-ref name="actionFileUpload">
                    <param name="allowedTypes">image/jpeg,image/png,image/pjpeg,image/jpg,application/pdf</param>
                    <param name="maximumSize">10485760</param>
                </interceptor-ref>

                <interceptor-ref name="json"/>

                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>


        </interceptors>

        <action name="" class="org.fileservice.Main" method="execute">
            <result name="success" type="json"/>
        </action>
        
        <action name="signin" class="org.fileservice.action.SigninAction" method="execute">
            <interceptor-ref name="timingInterceptor"/>
            <interceptor-ref name="json"/>
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>
        <action name="signup" class="org.fileservice.action.SignupAction" method="execute">
            <interceptor-ref name="timingInterceptor"/>
            <interceptor-ref name="json"/>
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>
        <action name="changePassword" class="org.fileservice.action.ChangePasswordAction" method="execute">
            <interceptor-ref name="timingInterceptor"/>
            <interceptor-ref name="json"/>
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>

       
        <action name="user/*" class="org.fileservice.action.ProfileAction" method="executeGetPut">
            <interceptor-ref name="timingInterceptor"/>
            <interceptor-ref name="conditionalJsonStack"/>
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>

        <action name="uploadFileDB" class="org.fileservice.action.FileUploadAction">
            <interceptor-ref name="timingInterceptor"/>
            <interceptor-ref name="fileUploadJsonStack"/>
            <result name="success" type="json"/>
            <result name="error" type="json"/>
            <result name="input" type="json"/>
        </action>

        <action name="downloadFileDB" class="org.fileservice.action.FileDownloadAction">
            <interceptor-ref name="timingInterceptor"/>
            <interceptor-ref name="json"/>
            <result name="success" type="stream">
                <param name="contentType">${contentType}</param>
                <param name="inputName">fileInputStream</param>
                <param name="contentDisposition">attachment;filename="${fileName}"</param>
                <param name="bufferSize">4096</param>
            </result>
            <result name="error" type="json"/>
        </action>

        <action name="deleteFile" class="org.fileservice.action.FileDeleteAction" method="execute">
            <interceptor-ref name="timingInterceptor"/>
            <interceptor-ref name="json"/>
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>

        <action name="viewFiles" class="org.fileservice.action.FileViewAction" method="execute">
            <interceptor-ref name="timingInterceptor"/>
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>
       
        <action name="setPermission" class="org.fileservice.action.FilePermissionAction" method="setPermission">
            <interceptor-ref name="timingInterceptor"/>
            <interceptor-ref name="json"/>
            <result name="success" type="json"/>
            <result name="error" type="json"/>
        </action>
        
        



    </package>
    
</struts>